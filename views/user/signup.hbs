<div class="col-md-4 offset-md-4" style="padding-top: 40px;">
    <h1 class="text-center">Inscription</h1>
    {{#each message}}
    <div class="alert alert-danger">
        <p>{{this}}</p>
    </div>
        
    {{/each}}
    <form action="signup" method="post">
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="email" name="email" placeholder="entrer votre email" class="form-control">
    </div>
    <div class="form-group">
        <label for="password">Mot de passe</label>
        <input type="password" name="password" placeholder="entrer votre mot de passe" class="form-control">
    </div>
    <div class="form-group">
        <label for="confirm-password">Confirmer le mot de passe</label>
        <input type="password" name="confirm-password" placeholder="confirmer le mdp" class="form-control">
    </div>
    <input type="hidden" name= '_csrf'  value={{token}}>
    <button type="submit" class="btn btn-danger">s'inscrire</button>
    </form>
</div>